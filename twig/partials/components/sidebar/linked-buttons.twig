<div class="linked_buttons{% if theme %} theme_{{theme}}{% endif %}{% if modifier %} linked_buttons_{{modifier}}{% endif %}">
	<div class="linked_buttons_body">
		<ul class="linked_buttons_group">
			{% for link in links %}
				<li class="linked_buttons_item">
					<a class="linked_buttons_link theme_{{link.theme}}" href="{{link.href}}">{{link.name}}</a>
				</li>
			{% endfor %}
		</ul>
	</div>
</div>
